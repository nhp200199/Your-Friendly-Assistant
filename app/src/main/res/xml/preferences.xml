<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/setting_category">

        <Preference
            app:fragment="com.phucnguyen.khoaluantotnghiep.LanguageSettingFragment"
            android:icon="@drawable/ic_global"
            android:key="language_pref"
            app:defaultValue="Vietnamese"
            app:useSimpleSummaryProvider="true"
            android:title="@string/language_item" />
        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_bell"
            android:key="notification_pref"
            android:title="@string/notification_item" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/other_category">
        <Preference
            android:icon="@drawable/ic_information"
            app:key="instruction_pref"
            android:title="@string/how_to_use_item" />
        <Preference
            android:icon="@drawable/ic_comment"
            android:title="@string/leave_comment_item"
            android:key="comment_pref"/>
        <Preference
            android:icon="@drawable/ic_share"
            android:title="@string/share_app_item"
            android:key="share_pref"/>

    </PreferenceCategory>
</PreferenceScreen>