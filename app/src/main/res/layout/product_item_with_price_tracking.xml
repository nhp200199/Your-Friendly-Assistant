<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/round_rectangle"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imgProduct"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/imgProduct"
                android:text="----"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/gray_300" />

            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPrice"
                android:layout_alignStart="@id/tvPrice"
                android:layout_marginTop="8dp"
                android:text="----"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/productDetailContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvProductTitle"
                android:layout_alignStart="@id/tvPrice"
                android:layout_alignBottom="@id/imgProduct"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSellerRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textAppearance="?attr/textAppearanceBody2" />
                <ImageView
                    android:id="@+id/imgSellerRateIcon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="12dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_gravity="bottom"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tvPriceDifference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:text="-2000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imgProduct"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPlatform"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imgActionMore"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="bottom"
                    android:src="@mipmap/ic_launcher"
                    />

            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>